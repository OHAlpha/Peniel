<p id="notice"><%= notice %></p>

<h1>Listing Maintainers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintainers.each do |maintainer| %>
      <tr>
        <td><%= maintainer.user_id %></td>
        <td><%= maintainer.description %></td>
        <td><%= maintainer.permissions %></td>
        <td><%= link_to 'Show', maintainer %></td>
        <td><%= link_to 'Edit', edit_maintainer_path(maintainer) %></td>
        <td><%= link_to 'Destroy', maintainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

